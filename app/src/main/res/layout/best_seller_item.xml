<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/samsung_galaxy_s20_ultra_1_1"/>

        <TextView
            android:id="@+id/price_without_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_pro_bold"
            android:text="@string/price"
            android:textColor="@color/color_secondary"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="175dp"/>

        <TextView
            android:id="@+id/discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_pro_bold"
            android:text="@string/price"
            android:textColor="@color/color_price_ws"
            android:textSize="10sp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="180dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_pro_regular"
            android:text="Xiaomi Mi 10 Pro"
            android:textColor="@color/color_secondary"
            android:textSize="10sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="199dp"
            android:layout_marginBottom="15dp"/>

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/white_ellipse"/>

        <ImageView
            android:id="@+id/favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_disabled_favorites"/>


    </FrameLayout>

</androidx.cardview.widget.CardView>