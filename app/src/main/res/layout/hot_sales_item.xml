<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/hs_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/_3104013057475" />


    <TextView
        android:id="@+id/hs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/mark_pro_bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:text="Iphone 12"/>

    <TextView
        android:id="@+id/hs_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/mark_pro_regular"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="Súper. Mega. Rápido."
        android:letterSpacing="-0.03"/>

    <TextView
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:background="@drawable/button_background"
        android:layout_marginTop="110dp"
        android:layout_marginStart="25dp"
        android:text="Buy now!"
        android:fontFamily="@font/mark_pro_bold"
        android:textColor="@color/color_secondary"
        android:textSize="11sp"
        android:gravity="center"
        android:letterSpacing="-0.03"/>

    <TextView
        android:id="@+id/is_new"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/primary_ellipse"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:text="New"
        android:fontFamily="@font/mark_pro_bold"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:letterSpacing="-0.03"/>


</androidx.cardview.widget.CardView>